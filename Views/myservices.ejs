<html lang="en">

<head>

    <meta charset="UTF-8">
    <title>My account</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
    <style media="screen">
        * {
            font-family: Montserrat, "Helvetica Neue", Helvetica, Arial, sans-serif;
            font-weight: bolder;
        }

        .row {
            margin: 0;
        }

        .navbar-default {
            height: 100px;
            padding-top: 30px;
            padding-left: 70px;
            border: 0;
            border-radius: 0 !important;
            background: #2c3e50;
        }

        .navbar-default .navbar-brand {
            text-transform: uppercase;
            font-size: 2em;
            text-decoration: none;
            color: white;
            transition: color 0.3s ease;
            cursor: pointer;
        }

        .navbar-default .navbar-brand:hover {
            color: #18bc9c;
            transition: color 0.3s ease;
        }

        .card {
            padding: 10px;
            padding-top: 10px;
            background: #18bc9c;
            border: 1px #c8c3ff solid;
            border-radius: 5px;
            text-align: center;
            margin: 10px 3% 1% 3%;
            height: 250px;
            width: calc(80% * (1/3));
        }

        .card .card-title {
            color: #02695e;
            font-size: 2em;
            font-weight: bold;
            text-transform: capitalize;
        }

        .card .card-link {
            margin-top: 0px;
            font-size: 1.3em;
            font-weight: bold;
            width: 90%;
            border: 2px solid BLACK;
            height: 50px;

            color: BLACK;
            background: transparent;
            transition: background-color 0.5s ease;
        }

        .card .card-link:hover {
            color: #18bc9c;
            height: 200px;

            background: BLACK;
            transition: background-color 0.1s ease;
        }
        .card .card-update:hover {
            color: #18bc9c;
            background: BLACK;
            transition: background-color 0.2s ease;
        }
        .card .card-remove:hover {
            color: #18bc9c;
            background: BLACK;
            transition: background-color 0.2s ease;
        }

        .form-container {
            height: 400px;
            border-left: 1px solid GREY;
            padding-left: 60px;
        }

        .form-control {
            width: 90%;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
        </div>
      </div>
    </nav>


    <div class="row">
        <div class="col-xs-12 col-md-8">
          <div class="row">
              <% for(var i=0; i<services.length; i++){%>
                  <div class="card col-xs-4">

                      <h4 class="card-Service_Name"> <%= services[i].Service_Name %></h4>
                      <h5 class="card-Price"> <%= services[i].Price %></h5>

                      <a href="<%= services[i].Description %>" class="btn btn-primary card-link">
                        More details</a>

                        <a href="/updating" class="btn btn-primary card-update">
                          update servicess <form method="POST" action="/update/<%= services[i].id%>"
                               ></a>

                      <a   href="/delete/<%= services[i].id%>" class="btn btn-primary card-delete">
                        Delete service  <form method="POST" action="/delete/<%= services[i].id%>"
                             >
                      </form>
                    </a>
                  </div>
              <% } %>


          </div>
        </div>
        <p><a href = "/addServices"> Add More Work</a></p>

        <p><a href = "/"> signout </a></p>

        <p>




            </div>
        </div>
      </div>


            </div>
        </div>
    </div>

